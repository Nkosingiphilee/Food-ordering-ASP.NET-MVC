@model IEnumerable<WebAppECart.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
}
<div style="text-align: center">
    <h2>Order details</h2>
    </div>

    <p>
        @Html.ActionLink("View reciept", "Receipt")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order.OrderNumber)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.OrderNumber)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.OrderDetailId }) |
                </td>
            </tr>
        }

    </table>


